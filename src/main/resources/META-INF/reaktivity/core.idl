scope core
{

    scope control
    {
        enum Role
        {
          SERVER,
          CLIENT,
          PROXY
        }

        struct Frame
        {
            int64 correlationId;
        }

        struct Error extends core::control::Frame [0x40000000]
        {
        }

        struct Route extends core::control::Frame [0x00000001]
        {
            core::control::Role role;
            int64 authMask; // TODO: default 0L
            string source;
            int64 sourceRef;
            string target;
            int64 targetRef;
            octets extension;
        }

        struct Routed extends core::control::Frame [0x40000001]
        {
            int64 sourceRef;
        }

        struct Unroute extends core::control::Frame [0x00000002]
        {
            core::control::Role role;
            string source;
            int64 sourceRef;
            string target;
            int64 targetRef;
            octets extension;
        }

        struct Unrouted extends core::control::Frame [0x40000002]
        {
        }
        
        scope auth 
        {       
            struct Resolve extends core::control::Frame [0x00000003]
            {
                list<string> roles;
            }
    
            struct Resolved extends core::control::Frame [0x40000003]
            {
                int64 authMask;
            }
    
            struct Unresolve extends core::control::Frame [0x00000004]
            {
                int64 authMask;
            }
    
            struct Unresolved extends core::control::Frame [0x40000004]
            {
            }
        }
        
    }
    
    scope stream
    {
        struct Frame
        {
            int64 streamId;
        }
        
        struct Begin extends core::stream::Frame [0x00000001]
        {
            int64 authMask;
            int64 authExpires;
            string source;
            int64 sourceRef;
            int64 correlationId;
            octets extension;
        }

        struct Data extends core::stream::Frame [0x00000002]
        {
            int64 authMask; // TODO: default 0L
            uint16 length;
            octets[length] payload;
            octets extension;
        }

        struct End extends core::stream::Frame [0x00000003]
        {
            octets extension;
        }

        struct Abort extends core::stream::Frame [0x00000004]
        {
            octets extension;
        }
        
        struct Reauthorize extends core::stream::Frame [0x00000005]
        {
            int64 authMask;
            int64 authExpires;
        }

        struct Reset extends core::stream::Frame [0x40000001]
        {
            octets extension; // TODO: default unset
        }

        struct Window extends core::stream::Frame [0x40000002]
        {
            int32 update;
            int32 frames;
        }

    }
        
}
