property newTargetInputRef ${nuklei:newReferenceId()} # external scope

property nukleiR00C ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlR00C ${nukleiR00C.control("example")}

property authMask [0x01 0x00 0x00 0x00 0x00 0x00 0x00 0x00] # external scope

connect "agrona://stream/bidirectional"
        option agrona:reader ${agrona:broadcastReceiver(controlR00C.controller)}
        option agrona:writer ${agrona:manyToOneWriter(controlR00C.nukleus)}

connected

write [0x00 0x00 0x00 0x01]
write ${controlR00C.nextCorrelationId()}
write [0x00]
write ${authMask}
write [0x06] "source"
write [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
write [0x06] "target"
write ${newTargetInputRef}
write [0x00]
write flush

read [0x40 0x00 0x00 0x01]
read ${controlR00C.correlationId()}
read ([0..8]:newSourceInputRef)

read notify ROUTED_INPUT

close
closed
