property newTargetInputEstRef ${nuklei:newReferenceId()} # external scope

property nukleiRG010002C ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlRG010002C ${nukleiRG010002C.control("example")}

connect "agrona://stream/bidirectional"
        option agrona:reader ${agrona:broadcastReceiver(controlRG010002C.controller)}
        option agrona:writer ${agrona:manyToOneWriter(controlRG010002C.nukleus)}

connected

write [0x00 0x00 0x00 0x01]
write ${controlRG010002C.nextCorrelationId()}
write [0x00 0x02]
write ${nuklei:string("source")}
write [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
write ${nuklei:string("target")}
write ${newTargetInputEstRef}
write [0x00]
write flush

read [0x40 0x00 0x00 0x01]
read ${controlRG010002C.correlationId()}
read ([0..8]:newSourceInputEstRef)

read notify ROUTED_INPUT

close
closed
