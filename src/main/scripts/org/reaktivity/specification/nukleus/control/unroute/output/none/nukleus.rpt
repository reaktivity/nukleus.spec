property nukleiUR020100N ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlUR020100N ${nukleiUR020100N.controlNew("example")}

connect await ROUTED_OUTPUT
        "agrona://stream/bidirectional"
        option agrona:reader ${agrona:manyToOneReader(controlUR020100N.nukleus)}
        option agrona:writer ${agrona:broadcastTransmitter(controlUR020100N.controller)}

connected

read [0x00 0x00 0x00 0x02]
read ([0..8]:correlationIdUR020100N)
read [0x01 0x00]
read ${nuklei:string("source")}
read ([0..8]:sourceOutputRefUR020100N)
read ${nuklei:string("target")}
read ([0..8]:targetOutputRefUR020100N)
read [0x00]

write [0x40 0x00 0x00 0x02]
write ${correlationIdUR020100N}
write flush

close
closed
