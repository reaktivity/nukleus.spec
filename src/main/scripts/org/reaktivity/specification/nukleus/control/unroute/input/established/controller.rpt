property newSourceInputEstRef ${nuklei:newReferenceId()} # external scope
property newTargetInputEstRef ${nuklei:newReferenceId()} # external scope

property nukleiUR020002C ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlUR020002C ${nukleiUR020002C.control("example")}

connect await ROUTED_INPUT
        "agrona://stream/bidirectional"
        option agrona:reader ${agrona:broadcastReceiver(controlUR020002C.controller)}
        option agrona:writer ${agrona:manyToOneWriter(controlUR020002C.nukleus)}

connected

write [0x00 0x00 0x00 0x02]
write ${controlUR020002C.nextCorrelationId()}
write [0x00 0x02]
write ${nuklei:string("source")}
write ${newSourceInputEstRef}
write ${nuklei:string("target")}
write ${newTargetInputEstRef}
write [0x00]
write flush

read [0x40 0x00 0x00 0x02]
read ${controlUR020002C.correlationId()}

close
closed
