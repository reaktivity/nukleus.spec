property nukleiA03N ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlA03N ${nukleiA03N.controlNew("example")}

property roleBits [0xc0 0x00 0x00 0x00 0x00 0x00]
property expires 0L

connect await ROUTED_INPUT
        "agrona://stream/bidirectional"
        option agrona:reader ${agrona:manyToOneReader(controlA03N.nukleus)}
        option agrona:writer ${agrona:broadcastTransmitter(controlA03N.controller)}

connected

read [0x00 0x00 0x00 0x03]
read ([0..8]:correlationIdA03N)
read ${newSourceInputRef}
read [0x08] "security"
read [0x05] "role1"
read [0x05] "role2"

write [0x40 0x00 0x00 0x03]
write ${correlationIdA03N}
write [0x01 0x00] # security nukleus Id
write ${roleBits}
write ${expires}
write flush

close
closed
