property nukleiUR020001N ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlUR020001N ${nukleiUR020001N.controlNew("example")}

connect await ROUTED_INPUT
        "agrona://stream/bidirectional"
        option agrona:reader ${agrona:manyToOneReader(controlUR020001N.nukleus)}
        option agrona:writer ${agrona:broadcastTransmitter(controlUR020001N.controller)}

connected

read [0x00 0x00 0x00 0x02]
read ([0..8]:correlationIdUR020001N)
read [0x00 0x01]
read ${nuklei:string("source")}
read ([0..8]:sourceInputRefUR020001N)
read ${nuklei:string("target")}
read ([0..8]:targetInputRefUR020001N)
read [0x00]

write [0x40 0x00 0x00 0x02]
write ${correlationIdUR020001N}
write flush

close
closed
