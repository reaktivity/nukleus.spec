property newSourceInputRef ${nuklei:newReferenceId()} # external scope

property nukleiA03C ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlA03C ${nukleiA03C.control("example")}

connect await ROUTED_INPUT
        "agrona://stream/bidirectional"
        option agrona:reader ${agrona:broadcastReceiver(controlA03C.controller)}
        option agrona:writer ${agrona:manyToOneWriter(controlA03C.nukleus)}

connected

write [0x00 0x00 0x00 0x03]
write ${controlA03C.nextCorrelationId()}
write ${newSourceInputRef}
write [0x08] "security"
write [0x05] "role1"
write [0x05] "role2"
write flush

read [0x40 0x00 0x00 0x03]
read ${controlA03C.correlationId()}
read ([0..2]:securityNukleusId)
read [0x0c 0x00 0x00 0x00 0x00 0x00]
read ([0..8]:expires)

read notify AUTHORIZED_INPUT

close
closed
